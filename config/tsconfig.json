{
  "include": [
    "app/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.tsx",
    "test/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "inlineSourceMap": true,
    "jsx": "preserve",
    "newLine": "LF",
    "outDir": "build/ts",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "dom",
      "es2017",
      "dom.iterable"
    ],
    "diagnostics": true,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true
  }
}
